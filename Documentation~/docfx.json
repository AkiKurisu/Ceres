{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "Runtime/**/*.cs",
                        "Editor/**/*.cs"
                    ]
                }
            ],
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "globalMetadata": {
            "_appTitle": "Ceres Documentation",
            "_appFooter": "Copyright Â© 2025 <b>AkiKurisu</b><br/>Generated with <b>DocFX</b>",
            "_enableSearch": true
        },
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            },
            {
                "src": "docs",
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "docs"
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://AkiKurisu.github.io/Ceres",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "weekly"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "../site"
    }
}